{# extends 'SonataAdminBundle::standard_layout.html.twig' #}
{% extends 'MainBundle:SonataAdmin:somenergia_custom_layout.html.twig' %}

{% block breadcrumb %}{{ parent() }}{% endblock %}

{% block title %}{% endblock%}

{% block sonata_admin_content %}
    {% if app.session.flashbag.has('info') %}
        <div class="alert alert-success">{{ app.session.flashbag.get('info') }}</div>
    {% endif %}
    {% if app.session.flashbag.has('error') %}
        <div class="alert alert-error">{{ app.session.flashbag.get('error') }}</div>
    {% endif %}
    <div class="btn-group" style="margin-bottom: 40px">
        <a class="btn btn-small" href="{{ path( 'sonata_admin_dashboard') }}">
            <i class="icon-circle-arrow-left"></i>
            Volver al men√∫ principal
        </a>
    </div>
    <h1>Paso 1/2. Consultar socio.</h1>
    <h4>Escribe alguno de los siguientes campos para consultar el socio.</h4>
    <form action="{{ path('asamblea_asistencia_nuevo_registro') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input class="btn btn-primary" type="submit" value="Consultar">
    </form>
{% endblock %}

{% block footer %}{% endblock %}