{% extends base_template %}

{% block content %}
    <div class="banner">
        <ul class="list-inline">
            <li><a href="https://www.somenergia.coop">web</a></li>
            <li><a href="https://blog.somenergia.coop">blog</a></li>
            <li><a href="https://plataforma.somenergia.coop">paltaforma</a></li>
            <li><a href="https://oficinavirtual.somenergia.coop">oficina virtual</a></li>
        </ul>
    </div>
    <div class="connection" style="position:relative;left:0;top:0;margin:50px auto;box-shadow: 2px 2px 10px #ccc;">
        <form action="{{ path("sonata_user_admin_security_check") }}" method="post">

            {% if error %}
                <div class="alert alert-error">{{ error|trans({}, 'SonataUserBundle') }}</div>
            {% endif %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="control-group">
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                <div class="controls">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="big sonata-medium"/>
                </div>
            </div>

            <div class="control-group">
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                <div class="controls">
                    <input type="password" id="password" name="_password" class="big sonata-medium" />
                </div>
            </div>

            <div class="control-group">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>

            <div class="form-actions">
                <input type="submit" style="color:white" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
    </div>
{% endblock content %}